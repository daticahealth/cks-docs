<%= Rouge::Themes::Base16::Monokai.render(:scope => '.highlight') %>

li code,
p code{
	background-color: #f4f4f4;
	border: 1px solid #ddd;
	padding: 1px 2px;
	color: #ca2657;
	border-radius: 3px;
	font-size: 13px;
	font-family: 'Source Code Pro', monospace, sans-serif;
	word-wrap: break-word;
}

pre{
	word-wrap: break-word;
	margin: 0px 0px 20px 0px;
	padding: 10px;
	background-color: #28334E;
	border-radius: 3px;
	font-size: 11px;
	overflow: scroll;
	color: #FFDEA7;
	line-height: 2;
}
pre code.highlight{
	padding: 0px;
	font-size: 13px;
	font-family: 'Source Code Pro', monospace, sans-serif;
	overflow-x: scroll;
}
.highlight{border-radius: 2px;}
pre.highlight{
	color: #ca2657;
	background-color: #f4f4f4;
	padding: 2px 4px;
	border: 1px solid #ddd;
	font-size: 13px;
	font-family: 'Source Code Pro', monospace, sans-serif;
}
